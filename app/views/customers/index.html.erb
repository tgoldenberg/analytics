<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Device</th>
      <th>Joined on</th>
      <th>Last seen</th>
      <th>Times used</th>
      <th>Days used</th>
      <th>Chapters read</th>
      <th>Fb shares</th>
      <th>Email shares</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.device %></td>
        <td><%= customer.joined_on %></td>
        <td><%= customer.last_seen %></td>
        <td><%= customer.times_used %></td>
        <td><%= customer.days_used %></td>
        <td><%= customer.chapters_read %></td>
        <td><%= customer.fb_shares %></td>
        <td><%= customer.email_shares %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

